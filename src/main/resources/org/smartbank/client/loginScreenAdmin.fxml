<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<AnchorPane prefHeight="832.0" prefWidth="1280.0"
            style="-fx-background: linear-gradient(to right, #557C93 0%, #1A262D 100%); -fx-background-blend-mode: multiply;"
            xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.smartbank.client.controller.LoginScreenAdminController">
    <children>
        <Label alignment="CENTER" layoutX="140.0" layoutY="81.0" prefHeight="161.0" prefWidth="999.0" text="Log-In" textFill="WHITE">
            <font>
                <Font size="120.0" />
            </font>
        </Label>
        <Label fx:id="tcknLabel" layoutX="427.0" layoutY="316.0" prefHeight="54.0" prefWidth="228.0" text="TCKN" textFill="WHITE">
            <font>
                <Font size="40.0" />
            </font>
        </Label>
        <Label fx:id="passwordLabel" layoutX="427.0" layoutY="482.0" prefHeight="54.0" prefWidth="228.0" text="Password" textFill="WHITE">
            <font>
                <Font size="40.0" />
            </font>
        </Label>
        <TextField fx:id="tcknField" layoutX="427.0" layoutY="390.0" prefHeight="81.0" prefWidth="425.0"
                   style="-fx-background-color: white; -fx-background-radius: 15; -fx-padding: 10; -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.3), 4, 0, 0, 4);" />
        <TextField fx:id="passwordField" layoutX="427.0" layoutY="555.0" prefHeight="81.0" prefWidth="425.0"
                   style="-fx-background-color: white; -fx-background-radius: 15; -fx-padding: 10; -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.3), 4, 0, 0, 4);" />
        <Button onMouseClicked="#handleLoginClick" alignment="CENTER" layoutX="882.0" layoutY="555.0" mnemonicParsing="false" prefHeight="81.0" prefWidth="118.0" style="-fx-background-color: orange; -fx-background-radius: 15; -fx-text-fill: white; -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.3), 4, 0, 0, 4);">
            <graphic>
                <ImageView fx:id="loginIcon" fitHeight="40.0" fitWidth="40.0">
                    <image>
                        <Image url="@icons/Vector.png" />
                    </image>
                </ImageView>
            </graphic>
        </Button>
      <Button layoutX="40.0" layoutY="40.0" mnemonicParsing="false" prefHeight="94.0" prefWidth="102.0"
              style="-fx-background-color: rgba(204, 204, 204, 0.5); -fx-background-radius: 30; -fx-border-color: #FFFFFF; -fx-border-width: 2; -fx-border-radius: 30;"
              onMouseClicked="#handleGoBackClick" >
          <graphic>
              <ImageView fx:id="backIcon" fitHeight="60.0" fitWidth="40.0">
                  <image>
                      <Image url="@icons/weui_back-outlined.png" />
                  </image>
              </ImageView>
          </graphic>
      </Button>
    </children>
</AnchorPane>
